<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.szmz.ywbl.ActYwbl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/xzLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgrounColor"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

               <com.szmz.widget.MyImageViewV
                   android:id="@+id/layout_wyjz"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.0"
                   app:imgSrcV="@drawable/icon_rhdc2"
                   app:tvContentV="我要救助"/>

                <com.szmz.widget.MyImageViewV
                    android:id="@+id/layout_jzfx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    app:imgSrcV="@drawable/icon_jzfx"
                    app:tvContentV="救助发现"/>

            </LinearLayout>


        </LinearLayout>



        </LinearLayout>


</FrameLayout>