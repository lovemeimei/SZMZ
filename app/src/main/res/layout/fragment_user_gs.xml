<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrounColor"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.szmz.widget.MyImageViewV
                android:id="@+id/ll_user_userinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_grzl"
                app:tvContentV="个人资料"
                />

            <com.szmz.widget.MyImageViewV
                android:id="@+id/ll_user_pw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_xgmm"
                app:tvContentV="修改密码"
                >


            </com.szmz.widget.MyImageViewV>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.szmz.widget.MyImageViewV
                android:id="@+id/ll_user_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_xxts"
                app:tvContentV="消息推送"
                android:gravity="center"
                />


            <com.szmz.widget.MyImageViewV
                android:id="@+id/ll_user_ywjd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_tsjb"
                app:tvContentV="业务监督"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_user_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_bg_color"
                android:gravity="center"
                android:visibility="visible"
                android:padding="@dimen/spacing_normal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/slt_user_job" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定位信息"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.0"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
