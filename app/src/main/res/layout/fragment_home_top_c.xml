<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.FragmentHomeTop"
    android:background="@drawable/home_top_bg">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="社会救助"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/font_normal"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_below="@+id/tv_home_title"
        android:scaleType="fitXY"
        android:src="@drawable/img_head"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iv_header"
        android:layout_below="@+id/tv_home_title"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="阮靖童"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iv_header"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="18631172264"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header"
        android:padding="@dimen/spacing_normal"
        android:orientation="horizontal"
        android:weightSum="3.0">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_num_zyh"
                android:layout_width="wrap_content"
                android:textColor="@color/gold"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="7个月"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="已救助时长"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_num_xzhs"
                android:layout_width="wrap_content"
                android:textColor="@color/gold"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="525.00元"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="月保障金"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_num_zxhs"
                android:layout_width="wrap_content"
                android:textColor="@color/gold"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="3765.00元"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"
                android:text="累计救助金额"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>