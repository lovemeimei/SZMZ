<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrounColor"
        android:orientation="vertical">

        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_xxtz"
            android:layout_width="match_parent"
            app:layout_title="消息通知"
            app:layout_content="点击查看消息通知"
            app:layout_cionSrc="@drawable/icon_hd_xxtz"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_db"
            android:layout_width="match_parent"
            app:layout_title="我的待办"
            app:layout_content="点击查看我的待办"
            app:layout_cionSrc="@drawable/home_icon_dbtz"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_thwt"
            android:layout_width="match_parent"
            app:layout_title="退回委托"
            app:layout_content="点击查看退回委托"
            app:layout_cionSrc="@drawable/icon_hd_thwt"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_mgryjg"
            android:layout_width="match_parent"
            app:layout_title="敏感人员监管"
            app:layout_content="点击查看敏感人员监管"
            app:layout_cionSrc="@drawable/icon_hd_mgryjg"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/header_shadow" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/footer_shadow" />
</FrameLayout>