<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrounColor"
        android:orientation="vertical">

        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_xxtz"
            android:layout_width="match_parent"
            app:layout_title="消息通知"
            app:layout_content="点击查看消息通知"
            app:layout_cionSrc="@drawable/home_icon_fctt"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.szmz.widget.MyImageLayoutView
            android:id="@+id/ml_hdzc"
            android:layout_width="match_parent"
            app:layout_title="核对政策"
            app:layout_content="点击查看核对政策"
            app:layout_cionSrc="@drawable/home_icon_yhzc"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/header_shadow" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/footer_shadow" />
</FrameLayout>