                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_bcje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="补偿金额"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_qfx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="起付线"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_dbzf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="大病支付"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_mzjzfy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="民政救助费用"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_jzbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="救助比例"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_jzje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="救助金额"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_brzf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="病人自付"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="描述"
                    app:contentText=""/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
