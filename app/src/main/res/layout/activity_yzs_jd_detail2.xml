<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounColor"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />


    <LinearLayout
        android:id="@+id/ll_stepview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

            <com.szmz.widget.StepProgressView2
                android:id="@+id/stepView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:auto_adapte="true"
                app:step_counts="4"
                app:cur_color="@color/red"
                app:reached_color="@color/material_green"
                app:circle_radius="5dp" />
        </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:background="@drawable/slt_color"
            android:button="@null"
            android:text="基本信息"
            android:textColor="@color/white"
            android:gravity="center"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:background="@drawable/slt_color"
            android:button="@null"
            android:textColor="@color/white"
            android:text="医疗救助信息"
            android:gravity="center"
            android:checked="false"/>
    </RadioGroup>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="姓名" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_xb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="性别" />


                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="身份证号" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="救助类型" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_cblx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="参保类型" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="审批结果" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="审批意见" />

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentText=""
                    app:titleText="申请编号" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_rb2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_zylx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
