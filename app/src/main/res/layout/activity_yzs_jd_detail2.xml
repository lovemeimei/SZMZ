                    app:contentText=""/>


                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="入院日期"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:titleText="出院日期"
                    app:contentText=""/>

                <com.szmz.widget.MyLayoutView
                    android:id="@+id/tv_yzs_history_10"
                    android:layout_width="match_parent"
