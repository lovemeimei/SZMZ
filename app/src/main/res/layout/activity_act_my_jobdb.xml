<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounColor"
    android:orientation="vertical">

    <include layout="@layout/comm_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_normal"
            android:text="医疗救助"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:drawablePadding="@dimen/spacing_tiny"
            android:drawableRight="@drawable/slt_arrow_down"/>

        <com.szmz.widget.SearchEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/shape_bg_color"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.materiallistview.MaterialRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        app:overlay="false"
        app:progress_backgroud_color="#FFFAFAFA"
        app:progress_colors="@array/material_colors"
        app:progress_show_arrow="true"
        app:progress_show_circle_backgroud="true"
        app:wave_color="#20ff2020"
        app:wave_height_type="normal"
        app:wave_show="true">


        <ListView
            android:id="@+id/lv"
            android:layout_weight="1.0"
            style="@style/listStyle"/>

    </com.materiallistview.MaterialRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_db_qx"
        android:layout_width="match_parent"
        android:padding="@dimen/spacing_normal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="全选"
            android:gravity="center"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/black_light"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/black_light"/>
        <TextView
            android:id="@+id/tv_plbl"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="批量办理"
            android:gravity="center"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/black_light"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
