<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrounColor"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.szmz.widget.MyImageViewV
                android:id="@+id/miv_grzl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_grzl"
                app:tvContentV="个人资料" />

            <com.szmz.widget.MyImageViewV
                android:id="@+id/miv_xgmm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_xgmm"
                app:tvContentV="修改密码" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.szmz.widget.MyImageViewV
                android:id="@+id/miv_bindphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_bdsj"
                app:tvContentV="绑定手机号" />

            <com.szmz.widget.MyImageViewV
                android:id="@+id/miv_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_sz"
                app:tvContentV="设置" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="2">

            <com.szmz.widget.MyImageViewV
                android:id="@+id/miv_tsjb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:imgSrcV="@drawable/gs_icon_tsjb"
                app:tvContentV="投诉举报" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
