<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:scrollbars="none"
    android:background="@color/backgrounColor">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_SPJD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slt_list_item"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/iv_spjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/home_icon_spjd" />

        <TextView
            android:id="@+id/tv_spjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_toRightOf="@+id/iv_spjd"
            android:text="审批进度"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_big" />

        <TextView
            android:id="@+id/tv_spjd_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_spjd"
            android:layout_alignLeft="@+id/tv_spjd"
            android:layout_below="@+id/tv_spjd"
            android:gravity="bottom"
            android:text="点击查看审批进度"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/ll_zjff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slt_list_item"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/iv_zjff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/main_icon_zjff" />

        <TextView
            android:id="@+id/tv_zjff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_toRightOf="@+id/iv_zjff"
            android:text="系统通知"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_big" />

        <TextView
            android:id="@+id/tv_zjff_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_zjff"
            android:layout_alignLeft="@+id/tv_zjff"
            android:layout_below="@+id/tv_zjff"
            android:gravity="bottom"
            android:text="点击系统通知消息"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />


</LinearLayout>
</ScrollView>