<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_huge">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_tongyi"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/iv_tongyi"
                android:layout_width="wrap_content"
                android:src="@drawable/slt_icon_db_tongyi"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                android:text="同意"
                android:layout_marginTop="@dimen/spacing_small"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tuihui"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:gravity="center"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/iv_tuihui"
                android:layout_width="wrap_content"
                android:src="@drawable/slt_icon_db_tuihui"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                android:text="退回"
                android:layout_marginTop="@dimen/spacing_small"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_feichu"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/iv_feichu"
                android:layout_width="wrap_content"
                android:src="@drawable/slt_db_icon_butongyi"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                android:text="废除"
                android:layout_marginTop="@dimen/spacing_small"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_butongguo"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/iv_butongguo"
                android:layout_width="wrap_content"
                android:src="@drawable/slt_icon_db_butongguo"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                android:text="不通过"
                android:layout_marginTop="@dimen/spacing_small"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>